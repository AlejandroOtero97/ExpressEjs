<h1 class="text-center text-primary">Ingrese datos</h1>
<br>

<% if(typeof alert != 'undefined') { %>
    <% alert.forEach(function(error) { %>
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <%= error.msg %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">Ã—</span>
            </button>
          </div>
    <% }) %>
<% } %>

<form action="/productos" method="post">

    <div class="form-group">
        <label for="title"><b>Producto</b></label>
        <input id="title" class="form-control" type="text" name="title">
    </div>

    <div class="form-group">
        <label for="price"><b>Precio</b></label>
        <input id="price" class="form-control" type="number" name="price">
    </div>

    <div class="form-group">
        <label for="thumbnail"><b>Thumbnail</b></label>
        <input id="thumbnail" class="form-control" type="text" name="thumbnail">
    </div>


    <button class="btn btn-success mt-3">Postear</button>

    <a href="http://localhost:8080/productos" class="btn btn-primary mt-3 ml-4">
        Ir al Historial
    </a>
    
</form>