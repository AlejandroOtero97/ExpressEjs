<h2 class="text-center text-danger">Historial</h2>

<% const hayProductos=productos.length> 0; %>
    <% if(hayProductos){ %>

        <div class="table-responsive mt-5 mb-5">
            <table class="table table-dark">
                <tr class="text-warning">
                    <th>Title</th>
                    <th>Price</th>
                    <th>Thumbnail</th>
                </tr>
                <% for (const producto of productos) {%>
                    <tr>
                        <td>
                            <%=producto.title%>
                        </td>
                        <td>
                            <%=producto.price%>
                        </td>
                        <td>
                            <%=producto.thumbnail%>
                        </td>
                    </tr>
                    <%};%>
            </table>
        </div>
        <% } else{ %>
            <h3 class="alert alert-danger mt-5 mb-5">No hay productos</h3>
            <% } %>
        
        <a href="http://localhost:8080/">
            <button class="btn btn-primary mt-3 mb-5">Volver</button>
        </a>
            